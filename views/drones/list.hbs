<h2>Available drones</h2>
{{#each drones}}

    <p>Name: {{this.name}} </p>
    <p>Propellers: {{this.propellers}} </p>
    <p>Max Speed: {{this.maxSpeed}} </p>       
    
    <form action="/drones/{{this._id}}/delete" method="GET">
        <button class="btn btn-danger">Delete</button>
    </form>
    
    <form action="/drones/{{this._id}}/edit" method="GET">
        <button type="submit" class="btn btn-warning">Edit</button>
    </form>


    
    </p>

{{/each}}

<form action="/drones/create" method="GET">
    <button type="submit" class="btn btn-warning">Create</button>
</form>